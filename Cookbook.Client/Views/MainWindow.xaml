<Window x:Class="Cookbook.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:self="clr-namespace:Cookbook.Client.ViewModels"
        xmlns:controls="clr-namespace:Cookbook.Client.Views.UserControls"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Title="Cookbook" Height="800" Width="900"
        DataContext="{StaticResource MainWindowViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TreeView IsEnabled="{Binding RecipeEditor.EditorShown, Converter={StaticResource BoolNegationConverter}}"
            x:Name="RecipesTreeView" Margin="5 5 0 5" Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Recipes}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type self:RecipeViewModel}" ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Title}" FontSize="20">                     
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Loaded">
                                <i:InvokeCommandAction Command="{Binding LoadChildrenCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBlock>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <controls:LoadingControl Grid.Row="0" 
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}, 
            ConverterParameter=HiddenIfFalse}" Grid.Column="0" MaxHeight="200" MaxWidth="200"/>

        <GridSplitter Grid.Row="0" Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent" />

        <Border Grid.Column="2" Grid.Row="0" Margin="0 5 5 5" 
                BorderBrush="{Binding ElementName=RecipesTreeView, Path=BorderBrush}" 
                BorderThickness="{Binding ElementName=RecipesTreeView, Path=BorderThickness}">
            <DockPanel>
                <DockPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=RecipeEditorControl, Path=Visibility}"
                                             Value="Visible">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Resources>
                <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" Grid.Row="0" 
                           Text="{Binding ElementName=RecipesTreeView, Path=SelectedItem.Description}"/>
                <controls:RecipeEditorControl DockPanel.Dock="Top" x:Name="RecipeEditorControl" Visibility="{Binding EditorShown,
                    Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=CollapsedIfFalse}"
                    DataContext="{Binding RecipeEditor}"/>
                <TextBlock DockPanel.Dock="Bottom" Text="{Binding ElementName=RecipesTreeView, Path=SelectedItem.Created}"/>
            </DockPanel>
        </Border>



        <StackPanel Margin="5 0 5 5" Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=RecipeEditorControl, Path=Visibility}" Value="Visible">
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <Button Command="{Binding ShowRecipeCreatorCommand}"
                    x:Name="Create" ToolTip="Create a new recipe" Content="Create recipe"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}"/>
            <Button Command="{Binding ShowRecipeCreatorCommand}" 
                    CommandParameter="{Binding ElementName=RecipesTreeView, Path=SelectedItem}"
                    x:Name="Fork" Content="Fork recipe" Margin="5 0 0 0"
                    IsEnabled="{Binding ElementName=RecipesTreeView, Path=SelectedItem, 
                    Converter={StaticResource NullConverter}, ConverterParameter=FalseIfNull}" 
                    ToolTip="Create a new recipe based on selected one" />
            <Button Command="{Binding ShowRecipeEditorCommand}"
                    CommandParameter="{Binding ElementName=RecipesTreeView, Path=SelectedItem}"                    
                    x:Name="Edit" Margin="5 0 0 0" 
                    ToolTip="Edit selected recipe" Content="Edit recipe"
                    IsEnabled="{Binding ElementName=RecipesTreeView, Path=SelectedItem, 
                    Converter={StaticResource NullConverter}, ConverterParameter=FalseIfNull}"/>
        </StackPanel>
    </Grid>
</Window>
