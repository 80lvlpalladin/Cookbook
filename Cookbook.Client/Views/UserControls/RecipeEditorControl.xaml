<UserControl x:Class="Cookbook.Client.Views.UserControls.RecipeEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cookbook.Client.Views.UserControls"
             mc:Ignorable="d">
    <StackPanel Margin="5">
        <TextBlock>Title: </TextBlock>
        <TextBox Text="{Binding Title}" TextWrapping="Wrap"></TextBox>
        <TextBlock>Description:</TextBlock>
        <TextBox Text="{Binding Description}" TextWrapping="Wrap" Height="100"></TextBox>
        <StackPanel Margin="0 5 0 0" Orientation="Horizontal">
            <Button Command="{Binding SendRecipeCommand}">Submit</Button>
            <Button Command="{Binding CloseEditorCommand}" Margin="5 0 0 0">Cancel</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
