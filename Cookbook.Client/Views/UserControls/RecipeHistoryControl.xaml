<UserControl x:Class="Cookbook.Client.Views.UserControls.RecipeHistoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cookbook.Client.Views.UserControls"
             mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center" Margin="5">
        <DataGrid CanUserAddRows ="False"  ItemsSource="{Binding LogEntries}"/>
        <Button Command="{Binding CloseCommand}" Content="Close" Margin="0 5 0 0"/>
    </StackPanel>
</UserControl>
